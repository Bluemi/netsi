#!/usr/bin/python3

import sys
import os

source_files = Glob('*.cpp')
# source_files.extend(Glob('*.hpp'))

env = Environment(parse_flags='-lboost_thread.a -std=c++17')
env['ENV']['TERM'] = os.environ['TERM']
# env.Append(CCFLAGS='-O3')
env.Append(LIBS=['pthread'])

# env.Library('mylib', source_files)
env.Program('example_client', 'client.cpp')
env.Program('example_server', 'server.cpp')
